<div class="container">
    <div class="row">

        <div class="col-md-6 offset-md-3">
            <div class="card bg-primary text-center card-form pt-100">
                <div class="card-body">
                    <h3><strong>Sign Up Today</strong></h3>
                    <p>Please fill out this form to register</p>
                    <form id="signUp">
                        <div class="form-group">
                            <p class="text-left">Please select account type:</p>
                            <select class="form-control" id="accountType">
                                <option value="player">Player</option>
                                <option value="sponsor">Sponsor</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control form-control-lg" id="firstName" placeholder="First Name"
                                required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control form-control-lg" id="lastName" placeholder="Last Name"
                                required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control form-control-lg" id="companyName" placeholder="Company Name">
                            <p class="text-left">* Required if account type sponsor selected</p>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control form-control-lg" id="email" placeholder="Email Address*"
                                required>
                        </div>
                        <p class="text-left">* This will be your username</p>
                        <div class="form-group">
                            <input type="password" class="form-control form-control-lg" id="password" placeholder="Password*"
                                required>
                        </div>
                        <p class="text-left">* Requirements: 8-12 characters, 1 uppercase, 1 lowercase, 1 number</p>
                        <div class="form-group">
                            <input type="password" class="form-control form-control-lg" id="passwordConfirm"
                                placeholder="Confirm Password" required>
                        </div>
                        <input type="submit" value="Submit" class="btn btn-outline-light btn-block">
                    </form>
                </div>
            </div>
            <p class="text-center"><strong>Already have an account? <a href="/signin">Sign in here.</strong></a></p>
        </div>
    </div>
</div>


{{#section 'script'}}

<script src="../public/js/signUp.js" type="text/javascript"></script>

{{/section}}

