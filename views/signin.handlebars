<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card bg-primary text-center card-form pt-100">
                <div class="card-body">
                    <h3><strong>Sign In</strong></h3>
                    <form id="signIn">
                        <div class="form-group">
                            <input type="email" class="form-control form-control-lg" id="email" placeholder="Email Address"
                                required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control form-control-lg" id="password" placeholder="Password"
                                required>
                        </div>
                        <input type="submit" value="Sign In" class="btn btn-outline-light btn-block">
                    </form>
                </div>
            </div>
            <p class="text-center"><strong>Don't have an account? <a href="/signup">Sign up here.</strong></a></p>
        </div>
    </div>
</div>

{{#section 'script'}}

<script src="../public/js/signIn.js" type="text/javascript"></script>

{{/section}}